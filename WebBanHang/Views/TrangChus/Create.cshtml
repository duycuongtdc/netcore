
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Layout_3.cshtml";
}



<div id="page-content" class="single-page">
    <div class="container">
        
        <div class="row">
            <div class="col-md-6">
                <div class="heading"><h2>Create Account</h2></div>
                <form asp-action="Create">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Username :" name="username" id="username" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password :" name="email" id="email" required>
                    </div>
                    <button type="submit" class="btn btn-1" name="login" id="login">Sign Up</button>
</form>
</div>
</div>
</div>
</div>